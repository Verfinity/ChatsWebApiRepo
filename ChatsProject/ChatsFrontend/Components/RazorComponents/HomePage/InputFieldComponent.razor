<div class="input-message-container">
    <input class="field-input" @bind-value="MessageContent" />
    <button class="text-container" @onclick="OnButtonClicked">Send</button>
</div>

@code {
    [Parameter]
    public EventCallback<string> OnMessageEnteredCallback { get; set; }

    public string MessageContent { get; set; } = string.Empty;

    public async Task OnButtonClicked()
    {
        await OnMessageEnteredCallback.InvokeAsync(MessageContent);
        MessageContent = string.Empty;
    }
}